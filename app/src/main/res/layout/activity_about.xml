<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/about_us2" />

    <ImageView
        android:layout_width="291dp"
        android:layout_height="154dp"
        android:layout_above="@+id/site"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="65dp"
        android:layout_marginLeft="130dp"
        android:layout_marginRight="130dp"
        android:layout_marginBottom="97dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/itemize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingBottom="9dp"
        android:text="Inventory Managment"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffb800"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemize"
        android:layout_centerInParent="true"
        android:text="Version 1.0.0"
        android:textColor="#ffb800"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/site"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/version"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="83dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="62dp"

        android:gravity="center"
        android:paddingTop="2dp"
        android:text="MADE BY:-\nAKASH HAPANI"
        android:textColor="#ffb800"
        android:textSize="20dp" />


</RelativeLayout>
